    <!-- Start masthead -->
    <div class="masthead">
      <!-- Start Featured -->
      <div class="content-wrapper">
        <div class="featured">
          <div class="featured__header">
            <h1 class="alpha"><%= t('home.featured') %></h1>
            <span><time datetime='<%= featured.created_at %>'><%= l(featured.created_at, format: :long) %></time></span>
          </div>
          <div class="featured__thumb">
            <img
              src="<%= featured.image_url %>" srcset="" />
          </div>
          <div class="featured__main">
            <h3 class="featured__title">
              <%= link_to post_path(featured), class: 'featured_link gamma' do %>
                <%= featured.title %>
              <% end %>
            </h3>
            <% if featured.body.present? %>
              <p class="featured__text">
                <%= featured.body.truncate(160) %> <%= link_to t('home.read_more'), post_path(featured) %>
              </p>
            <% end %>
            <div class="featured__author">
            <%= link_to username_path(featured.user.username) do %>
              <%= image_tag(default_avatar(featured.user), alt: 'Avatar', class: 'avatar avatar-medium') %>
            <% end %>
              <span> <%= t('post.by') %> <%= link_to featured.user.name, username_path(featured.user.username) %></span>
            </div>
          </div>
          <div class="featured__footer">
            <% if featured.tag_ids.present? %>
              <ul class="featured__tags bare-list">
                <% featured.tags.each do |tag| %>
                  <li>
                    <%= link_to tag.name, name_path(tag.name), class: 'btn btn--tag' %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>