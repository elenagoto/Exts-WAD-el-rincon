  <header class="header">
    <div class="header__image">
      <!-- Add here Featured image -->
      <% if current_page?('/') %>
        <img
          src="<%= @featured.image_url %>"
          alt="Podcast" srcset="" />
      <% end %>
    </div>
    <!-- Start global header -->
    <div class="global-header">

      <div class="content-wrapper">
        <div class="logo">
          <a href="/">El Rincón de la Curuba</a>
        </div>
        <div class="headers" id="show">
          <div class="hamburger" id="hamburger">
            <div></div>
          </div>
          <div class="social-media-header">
            <nav>
              <ul class="global-nav bare-list social-media-nav">
                <li>
                  <a href="#" aria-label="Link to Spotify">
                    <i class="fab fa-spotify"></i>
                  </a>
                </li>
                <li>
                  <a href="#" aria-label="Link to Instagram">
                    <i class="fab fa-instagram"></i>
                  </a>
                </li>
                <li>
                  <a href="#" aria-label="Link to Twitter">
                    <i class="fab fa-twitter"></i>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
          <div class="main-header">
            <nav>
              <ul class="global-nav bare-list">
                <li><a href="pages/about.html">Nosotros</a></li>
                <li><a href="#">El Podcast</a></li>
                <li><a href="#">El Blog</a></li>
                <li><a href="pages/log-in.html">Iniciar Sesión</a></li>
                <li> 
                  <%= link_to search_path do %>
                    <i class="far fa-search fa-lg"></i> 
                    <span class="sr-only">Buscar</span>
                  <% end %>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <% if current_page?('/') %>
      <%= render partial: 'featured_header', locals: { featured: @featured } %>
    <% end %>
    <% if current_page?('/search') %>
      <%= render partial: 'search' %>
    <% end %>
  </header>