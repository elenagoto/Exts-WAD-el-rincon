<div class="content-wrapper">
  <!-- START Form -->
  <div class="form-container">
    <h1 class="alpha"><%= t('edit.modify') %></h1>
    <div class="alert alert--wide">
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
    <%= form_for @user, html: { class: 'form'} do |f| %>
      <!-- Name -->
      <div class="input">
        <div>
          <%= f.label :name, class: 'input__label' %>
        </div>
        <div>
          <%= f.text_field :name, class: 'input__field' %>
        </div>
      </div>
      <!-- Username -->
      <div class="input">
        <div>
          <%= f.label :username, class: 'input__label' %>
        </div>
        <div>
          <%= f.text_field :username, class: 'input__field' %>
        </div>
      </div>
      <!-- Email -->
      <div class="input">
        <div>
          <%= f.label :email, class: 'input__label' %>
        </div>
        <div>
          <%= f.email_field :email, class: 'input__field' %>
        </div>
      </div>
      <!-- Avatar -->
      <div class="input">
        <div>
          <%= f.label :avatar, "Avatar", class: 'input__label' %>
        </div>
        <div>
          <%= f.file_field :avatar, class: 'input__field' %>
        </div>
      </div>
      <!-- Role -->
      <% if admin? %>
        <div class="input">
          <div>
            <%= f.label :role, class: 'input__label' %>
          </div>
          <div>
            <%= f.select :role,  [["Admin", "admin"], ["Author", "author"], ["Registered", "registered"]], class: 'input__field' %>
          </div>
        </div>
      <% end %>
      <!-- Bio -->
      <% if @user.role == 'author'%>
        <div class="input">
          <div>
            <%= f.label :bio, class: 'input__label' %>
          </div>
          <div class="input--textarea input--post-text">
            <%= f.text_area :bio, class: 'input__field'%>
          </div>
        </div>
      <% end %>
      <!-- Cancel link -->
      <div class="form__text">
        <%= link_to t('edit.cancel'), profile_path %>
      </div>
      <!-- Submit -->
      <div class="form__text input__btn--alone">
        <div class="prompt">
          <%= f.submit t('edit.modify'), class: 'btn btn--cta prompt__confirm' %>
        </div>
      </div>
    <% end %>
    
  </div>

  <!-- END Form -->
</div>