<% if logged_in? && can_edit_user?(@user) %>
  <div class="modify-bar">
    <div class="content-wrapper">
      <ul class="bare-list">
        <li>
          <%= link_to edit_user_path(@user), class: 'btn btn--icon', role: 'button' do %>
            <i class="fal fa-user-edit"></i> 
            Modificar
          <% end %>
        </li>
        <li>
          <%= link_to user_path(@user), class: 'btn btn--icon btn--warning', role: 'button', method: :delete do %>
            <i class="fal fa-trash"></i>
            Borrar
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
<div class="content-wrapper">
  <div class="user">
    <div class="user__header">
    <% if @user.name.present? %>
      <h1 class="alpha"><%= @user.name %></h1>
    <% else %>
      <h1 class="alpha"><%= @user.username %></h1>
    <% end %>
    <% if admin? %>
      <span>Registrado desde: <time datetime="<%= @user.created_at %>"><%= @user.created_at.strftime("%d %b '%y") %></time></span>
      <span><%= @user.role %></button>
    <% end %>
    </div>
    <div class="user__thumb">
      <%= image_tag('passifloras/gulupa_1.jpeg', alt: 'Avatar', class: 'avatar') %>
    </div>
    <div class="user__main">
      <h3 class="user__title">
        Biografía:
      </h3>
      <p class="user__bio"><%= @user.bio %></p>
    </div>
    <div class="user__footer">
      <% if @user.posts.any? %>
        <%= link_to 'Artículos', username_posts_path(@user.username), class: 'btn' %>
      <% end %>
      
    </div>
  </div>
</div>