<% if logged_in? && admin? %>
  <div class="modify-bar">
    <div class="content-wrapper">
      <ul class="bare-list">
        <li>
          <%= link_to edit_user_path(@user), class: 'btn btn--icon', role: 'button' do %>
            <i class="fal fa-user-edit"></i> 
            <%= t('edit.modify') %>
          <% end %>
        </li>
        <li>
          <%= link_to user_path(@user), class: 'btn btn--icon btn--warning', role: 'button', method: :delete do %>
            <i class="fal fa-trash"></i>
            <%= t('edit.delete') %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
<div class="content-wrapper">
  <div class="user">
    <div class="user__header">
    <% if @user.name.present? %>
      <h1 class="alpha"><%= @user.name %></h1>
    <% else %>
      <h1 class="alpha"><%= @user.username %></h1>
    <% end %>
    <% if logged_in? && admin? %>
      <span><%= t('user.registered') %> <time datetime="<%= @user.created_at %>"><%= l(@user.created_at, format: :concise) %></time></span>
      <span><%= t('user.role') %>: <%= @user.role %></button>
    <% end %>
    </div>
    <div class="user__thumb">
      <%= image_tag(default_avatar(@user), alt: 'Avatar', class: 'avatar') %>
    </div>
    <div class="user__main">
      <h3 class="user__title">
        <%= t('user.bio') %>:
      </h3>
      <p class="user__bio"><%= @user.bio %></p>
    </div>
    <div class="user__footer">
      <% if @user.posts.any? %>
        <%= link_to t('header.posts'), username_posts_path(@user.username), class: 'btn' %>
      <% end %>
      
    </div>
  </div>
</div>